<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".PertolonganPertama">
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/text_card"
            app:cardBackgroundColor="@color/colorPrimary"
            style="@style/card_grid"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textColor="@color/textColor"
                android:textSize="30dp"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pertolongan Pertama Pada kondisi Henti Jantung"
        />
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
            android:layout_below="@id/text_card"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="100dp">
        <com.google.android.material.button.MaterialButton
                android:id="@+id/ar_button"
                android:layout_margin="10dp"
                android:background="@color/colorAccent"
                style="@style/textCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="RJP with AR"
                android:layout_weight="1"
        />
        <com.google.android.material.button.MaterialButton
                android:background="@color/colorAccent"
                style="@style/textCard"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="RJP AUDIO"
        />
    </LinearLayout>
</RelativeLayout>